@model BangazonWorkforce.Models.ViewModels.EditEmployeeViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>EditEmployeeViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="form-group">
                    <label asp-for="employee.FirstName" class="control-label"></label>
                    @Html.TextBoxFor(m => m.employee.FirstName, new { @readonly = "readonly" })
                    <span asp-validation-for="employee.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="form-group">
                        <label asp-for="employee.LastName" class="control-label"></label>
                        <input asp-for="employee.LastName" class="form-control" />
                        <span asp-validation-for="employee.LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="departments" class="control-label"></label>
                        <select asp-for="employee.DepartmentId" asp-items="@Model.departments"></select>

                    </div>
                    <div class="form-group">
                        <label asp-for="computers" class="control-label"></label>
                        <select asp-for="employee.CurrentComputer.Id" asp-items="@Model.computers"></select>

                    </div>
                    <div class="form-group">
                        <input type="submit" value="Edit" class="btn btn-primary" />
                    </div>
</form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

